FROM ubuntu as final
FROM ubuntu as build
RUN mkdir /docker
WORKDIR /docker

COPY pom.xml .
COPY src ./src

RUN apt-get update
RUN apt-get install maven openjdk-8-jdk --yes

RUN mvn verify
RUN apt remove maven --yes

FROM final
RUN apt-get update
RUN apt-get install openjdk-8-jdk --yes
RUN mkdir /docker
WORKDIR /docker
COPY --from=build /docker .

ENTRYPOINT ["java","-Xmx8m","-Xms8m","-jar","./target/words.jar"]
EXPOSE 8080

